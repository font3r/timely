@baseAddress = http://localhost:5000
@scheduleId = {{schedule.response.body.id}}

### Get schedule
GET {{baseAddress}}/api/v1/schedules/{{scheduleId}}

### Get schedules
# @name schedules
GET {{baseAddress}}/api/v1/schedules

### Create schedule
# "ns", "us" (or "µs"), "ms", "s", "m", "h".
# @name schedule
POST {{baseAddress}}/api/v1/schedules
Content-Type: application/json

{
    "description": "test job description",
    "frequency": "*/1 * * * *",
    "schedule_start": "2024-08-25T21:18:55+02:00",
    "job": {
        "slug": "test-example-job-1"
    },
    "retry_policy": {
        "strategy": "constant",
        "interval": "1m",
        "count": 25
    }
}

### Create schedule
# "ns", "us" (or "µs"), "ms", "s", "m", "h".
# @name schedule
POST {{baseAddress}}/api/v1/schedules
Content-Type: application/json

{
    "description": "test job description",
    "frequency": "once",
    "job": {
        "slug": "test-example-job-1",
        "data": {
            "userId": "545753464587546"
        }
    },
    "retry_policy": {
        "strategy": "constant",
        "interval": "5s",
        "count": 3
    }
}

### Delete schedule
DELETE {{baseAddress}}/api/v1/schedules/{{scheduleId}}